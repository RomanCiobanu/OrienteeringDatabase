
<% fields = [
  @competition,
  ["name"],
  [["date"], ["location"], ["country"]],
  ["group", "distance_type", "rang" ]
]

%>
<%= render partial: '/layouts/show', :locals => { :elements => fields} %>

    <p class="lead">
        <% if user_signed_in? %>
        <%= link_to 'Edit', edit_competition_path(@competition), class: "btn btn-success btn-sm" %>
        <% end %>
        <%= link_to 'Back', competitions_path, class: "btn btn-danger btn-sm" %>
    </p>
