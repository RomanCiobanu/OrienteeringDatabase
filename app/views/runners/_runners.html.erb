<table class = "table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-primary">
      <th>Name</th>
      <th>Surname</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Category</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.name %></td>
        <td><%= runner.surname %></td>
        <td><%= runner.gender %></td>
        <td><%= runner.dob %></td>
        <td><%= runner.category.name %></td>
        <td><%= link_to runner.club.name, club_path(runner.club) %></td>
          <td><%= link_to 'Show', runner, class: "btn btn-warning btn-sm"%></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_runner_path(runner), class: "btn btn-success btn-sm"%></td>
        <td><%= link_to 'Delete', runner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
