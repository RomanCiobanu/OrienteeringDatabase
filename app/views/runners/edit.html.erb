<% if user_signed_in? %>
<h1>Editing Runner</h1>

<% fields = [
    ["name", "text"],
    ["surname", "text"],
    ["gender", ["M", "W"], "select"],
    ["dob", [Date.today.year, Date.today.year - 80], "date"],
    ["club", @clubs, ["name"], "id"]
  ]%>

<%= render partial: '/layouts/form', :locals => { elements: fields, model: @runner} %>

<br/>

<%= link_to 'Show', @runner, class: "btn btn-warning btn-sm"%>
<% else %>
 <p> You need to sign in to edit club </p>
<%=link_to 'Sign In', new_user_session_path, class: "btn btn-info btn-sm"%>
 <%=link_to 'Sign Up', new_user_registration_path, class: "btn btn-success btn-sm" %>
<% end %>

<%= link_to 'Back', runners_path, class: "btn btn-danger btn-sm"%>
