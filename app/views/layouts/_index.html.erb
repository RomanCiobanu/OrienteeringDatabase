<% if @index_array.first %>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <% @index_array.first.drop(1).each do |column| %>
            <th>
                <%= link_to column.first.titlecase, sort: column.second  %>
            </th>
            <% end %>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @index_array.each do |row| %>
        <tr>
            <% row.drop(1).each do |column| %>
            <td>
                <%if column.last == 'link'%>
                <%= link_to column[2], method("#{column.first}_path").call(column[3]) %>
            </td>
            <% else %>
            <%= column.last %>
            </td>
            <% end %>
            <% end %>
            <%= render partial: '/layouts/actions', :locals => { :element => row.first } %>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
<br>
